{
    "version": "97.0.1",
    "description": "Popular open source web browser (french lang pack).",
    "homepage": "https://www.mozilla.org/firefox/",
    "license": "MPL-2.0",
    "notes": [
        "To set profile 'Scoop' as *DEFAULT*, or profiles/settings was lost after update:",
        "  - Run 'Firefox Profile Manager', choose 'Scoop' then click 'Start Firefox'.",
        "  - Visit 'about:profiles' page in Firefox to check *DEFAULT* profile.",
        "For details: https://support.mozilla.org/fr/kb/profile-manager-create-remove-switch-firefox-profiles"
    ],
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/97.0.1/win64/fr/Firefox%20Setup%2097.0.1.exe#/dl.7z",
            "hash": "sha512:7266b22913c879dd271387ac3596451d4eb627812b351aaf6b76f2363c74a4d47641efd8eedf1740ed2e2572378092f4f73b3e4a5080401212c2e160031a14fc"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/97.0.1/win32/fr/Firefox%20Setup%2097.0.1.exe#/dl.7z",
            "hash": "sha512:504774851c4b2ee6de6d06181d12804f03200c7fbdab782fcb04ee9748c0179c26163526b8eaaaede66a3e77cf6b79c940d508532dae447bf73053de0274b5bd"
        }
    },
    "extract_dir": "core",
    "post_install": "firefox -CreateProfile \"Scoop $dir\\profile\"",
    "bin": "firefox.exe",
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox"
        ],
        [
            "firefox.exe",
            "Firefox Profile Manager",
            "-P"
        ]
    ],
    "persist": [
        "distribution",
        "profile"
    ],
    "checkver": {
        "url": "https://archive.mozilla.org/pub/firefox/releases/",
        "regex": "pub/firefox/releases/(\\d+(\\.\\d+){2})/",
        "reverse": true
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/fr/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/fr/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/fr/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/fr/$basename"
                }
            }
        }
    }
}
